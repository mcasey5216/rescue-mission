<div class="small-12 medium-8 large-6">
    <h1>New Question</h1>

    <%= form_for @question do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit "Add question", class: "submit_class button expand round" %>
    <%- end -%>
  </div>
  <%= link_to "All questions", questions_path %>
